# Dockerfile
FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install system deps (ffmpeg-like not needed). Add build-essential if compiling wheels.
RUN apt-get update && apt-get install -y --no-install-recommends \
    git build-essential && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements (táº¡o requirements.txt)
COPY requirements.txt .

RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# Copy project
COPY . .

# Expose port
EXPOSE 5000

# Use gunicorn to run flask app
CMD ["gunicorn", "src.app:app", "-b", "0.0.0.0:5000", "--workers", "1", "--threads", "4", "--timeout", "120"]
